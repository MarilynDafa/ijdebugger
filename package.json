{
	"name": "ijjs-debug",
	"displayName": "IJJS Debugger",
	"version": "1.0.0",
	"publisher": "marilyndafa",
	"description": "Debug the IJJS runtime.",
	"author": {
		"name": "marilyndafa",
		"email": "marilyndafa@163.com"
	},
	"license": "MIT",
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.33.0",
		"node": "^14.4.0"
	},
	"icon": "images/logo.png",
	"categories": [
		"Debuggers"
	],
	"private": true,
	"scripts": {
		"prepublish": "tsc -p ./src",
		"compile": "tsc -p ./src",
		"tslint": "tslint ./src/**/*.ts",
		"watch": "tsc -w -p ./src",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"dependencies": {
		"await-notify": "1.0.1",
		"source-map": "^0.7.3",
		"stream-parser": "^0.3.1",
		"vscode-debugadapter": "1.37.0"
	},
	"devDependencies": {
		"@types/node": "10.12.12",
		"@types/mocha": "5.2.7",
		"typescript": "3.5.3",
		"mocha": "6.2.0",
		"vscode": "1.1.36",
		"vscode-debugadapter-testsupport": "1.37.0",
		"tslint": "5.18.0",
		"vsce": "1.66.0"
	},
	"main": "./out/extension",
	"activationEvents": [
		"onDebug"
	],
	"contributes": {
		"breakpoints": [
			{
				"language": "javascript"
			},
			{
				"language": "typescript"
			}
		],
		"debuggers": [
			{
				"type": "ijjs",
				"label": "IJJS Debug",
				"program": "./out/debugAdapter.js",
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [
							"program",
							"runtimeExecutable"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to a js file.",
								"default": "${workspaceFolder}/main.js"
							},
							"console": {
								"type": "string",
								"enum": [
									"internalConsole",
									"integratedTerminal",
									"externalTerminal"
								],
								"default": "internalConsole"
							},
							"args": {
								"type": "array",
								"items": {
									"type": "string"
								},
								"default": []
							},
							"cwd": {
								"type": "string",
								"default": "${workspaceFolder}"
							},
							"runtimeExecutable": {
								"type": "string",
								"description": "Path to ijjs executable"
							},
							"mode": {
								"type": "string",
								"description": "The debugger connection mode. Use 'listen' to have VS Code wait for IJJS to connect. Use 'connect' to have VSCode attach to a IJJS runtime that is listening for a debugger.",
								"enum": [
									"connect",
									"listen"
								],
								"default": "listen"
							},
							"address": {
								"type": "string",
								"description": "The address used by he debug extension for incoming/outgoing sessions (connection 'mode' dependent).",
								"default": "localhost"
							},
							"port": {
								"type": "number",
								"description": "The port used by he debug extension for incoming/outgoing sessions. (connection 'mode' dependent)",
								"default": 0
							},
							"localRoot": {
								"type": "string",
								"description": "The local source root use for files that do not have source maps.",
								"default": "${workspaceFolder}/"
							},
							"remoteRoot": {
								"type": "string",
								"description": "The remote root use for files that do not have source maps.",
								"default": ""
							},
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": true
							},
							"jsPath": {
								"type": "string",
								"description": "the js path",
								"default": "${workspaceFolder}/src"
							},
							"sourceMaps": {
								"type": "boolean",
								"description": "Enable sourceMaps.",
								"default": false
							}
						}
					},
					"attach": {
						"properties": {
							"mode": {
								"type": "string",
								"description": "The debugger connection mode. Use 'listen' to have VS Code wait for IJJS to connect. Use 'connect' to have VSCode attach to a IJJS runtime that is listening for a debugger.",
								"enum": [
									"connect",
									"listen"
								],
								"default": "listen"
							},
							"address": {
								"type": "string",
								"description": "The address used by he debug extension for incoming/outgoing sessions (connection 'mode' dependent).",
								"default": "localhost"
							},
							"port": {
								"type": "number",
								"description": "The port used by he debug extension for incoming/outgoing sessions. (connection 'mode' dependent)",
								"default": 0
							},
							"localRoot": {
								"type": "string",
								"description": "The local source root used for unqualified files.",
								"default": "${workspaceFolder}/"
							},
							"remoteRoot": {
								"type": "string",
								"description": "The remote root use for files that do not have source maps.",
								"default": ""
							},
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": true
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "ijjs",
						"request": "launch",
						"name": "Launch IJJS",
						"runtimeExecutable": "/path/to/ijjs",
						"program": "^\"${workspaceFolder}/main.js\""
					}
				],
				"configurationSnippets": [
					{
						"label": "IJJS Debug: Launch",
						"description": "A new configuration for launching and debugging a JavaScript file in IJJS.",
						"body": {
							"type": "ijjs",
							"request": "launch",
							"name": "Launch IJJS",
							"runtimeExecutable": "/path/to/ijjs",
							"program": "^\"\\${workspaceFolder}/main.js\""
						}
					},
					{
						"label": "IJJS Debug: Attach",
						"description": "A new configuration for launching and waiting fpr IJJS to attach.",
						"body": {
							"type": "ijjs",
							"request": "launch",
							"name": "Attach IJJS",
							"localRoot": "^\"\\${workspaceFolder}/\""
						}
					}
				]
			}
		]
	}
}
